<script>
    function GirisYap() {


        var username = $("#name").val();
        var password = $("#password").val();

        if (username == "") {

            Notify("Kullanıcı adınızı giriniz", "error");
            return;
        }

        if (password == "") {
            Notify("Şifrenizi giriniz", "error");
            return;
        }


        $.ajax({
            type: "Post",
            url: "/Admin/Login/Login",
            data: { name: username, password: password }

        }).then(function (response) {
            if (response) {

                Notify("Lütfen bekleyiniz", "success");
                setTimeout(function () {
                    window.location.href = "/Admin/Home";
                }, 2000);

            } else {

                Notify("Bilgilerinizi kontrol ediniz", "error");
            }

        })

    }
</script>

